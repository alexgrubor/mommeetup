generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Meeting {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  date      DateTime
  duration   String?
  time      String?
  location  String
  notes     String?
  createdBy String 
  remote    Boolean @default(false)
  public    Boolean @default(true)
  category  category
}

enum category {
  playgrounds
  parenting_support
  book_club
  self_care
  education
  DIY
  cooking
  local
  hobby
  other
}

